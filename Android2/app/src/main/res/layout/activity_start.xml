<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A6FD6"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/createBtn"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginTop="216dp"
        android:text="Создать аккаунт"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/joinBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/joinBtn"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginTop="83dp"
        android:layout_marginBottom="360dp"
        android:background="#596DD3"
        android:text="Присоединиться"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>